<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        >


        <ImageView
            android:id="@+id/chef_image"
            android:layout_width="wrap_content"
            android:layout_height="142dp"
            android:layout_alignBottom="@+id/chef_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="-10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_chow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="382dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_baseline_location_on_24" />

        <ImageView
            android:layout_width="309dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="357dp"
            android:layout_marginBottom="153dp"
            android:src="@drawable/delivery" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="271dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_baseline_star_24"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_baseline_av_timer_24"

            />

        <TextView
            android:id="@+id/chef_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            android:text="35 - 50 mins" />

        <TextView
            android:id="@+id/chef_rating"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="146dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="9dp"
            android:text="4.1 Very Good (50+)" />

        <TextView
            android:id="@+id/chef_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="324dp"
            android:layout_marginBottom="8dp"
            android:text="1.3 miles" />

        <TextView
            android:id="@+id/chef_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="68dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Name of Food"
            android:textColor="@android:color/transparent"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>